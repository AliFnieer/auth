# Example .env for the Auth project
# Copy to .env and fill real values before running

DATABASE_URL=postgresql://auth_user:auth_pass@localhost:5432/auth_db?schema=public
PORT=3000
NODE_ENV=development

# JWT configuration
JWT_SECRET=CHANGE_ME_TO_A_STRONG_SECRET
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email / SMTP settings (used for verification and password reset)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your@example.com
EMAIL_PASS=supersecret
SMTP_FROM="Auth Service <no-reply@example.com>"
